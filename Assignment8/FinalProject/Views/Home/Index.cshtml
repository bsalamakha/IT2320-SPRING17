@model FinalProject.Models.HomeViewModel

<html>

    <head>
        <link href="~/Styles/Home.css" rel="stylesheet" />
        <title>Final Project</title>
    </head>

    <body>
        <script src="~/Scripts/jquery-2.1.1.min.js"></script>
        <script src="~/Scripts/jquery-ui.min.js"></script>
        <script src="~/Scripts/Home.js"></script>
        
        <div class="home">

                <header class="header">
                    <h2>Welcome to Cuyahoga Community College Student Services Online</h2>     
                </header>

                <section class="statement">
                    <p>Cuyahoga Community College recognizes a students' right to access
                    personal and academic records in accordance with the Family Educational Rights
                    and Privacy Act of 1974 (FERPA) as amended by Public Law 93-568.</p>
                </section>

                <section class="main">
                    <article class="loginPane">
                        <p class="loginNote">
                            Already have an account with us?
                            Returning user may log in by entering their site username and password.
                        </p>
                        <form class="loginForm">
                            <ul>
                                <li>
                                    <label>Username</label>
                                    <input id="username" />
                                </li>

                                <li>
                                    <label>Password</label>
                                    <input id="password" type="password" />
                                </li>
                            </ul>
                        </form>
                    </article>
                    <article class="loginPane">
                        <p class="loginNote">
                            New users, please create a new account by providing us with some basic
                            information.
                        </p>
                        <form class="loginForm">
                            <ul>
                                <li>
                                    <label>Username</label>
                                    <input id="username1" />
                                </li>

                                <li>
                                    <label>Password</label>
                                    <input id="password1" type="password" />
                                </li>
                            
                                <li>
                                    <label>E-Mail Address</label>
                                    <input id="email" type="email" />
                                </li>
                            
                                <li>
                                    <label>Repeat E-Mail Address</label>
                                    <input id="emailrepeat" type="email" />
                                </li>
                            </ul>
                        </form>
                    </article>
                    
                </section>
                


        </div>

    </body>

</html>